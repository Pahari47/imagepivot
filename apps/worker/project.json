{
    "name": "worker",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/worker",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "echo Worker build: Validating Python dependencies and structure",
          "cwd": "apps/worker"
        },
        "outputs": []
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "venv\\Scripts\\python.exe -m uvicorn main:app --reload",
          "cwd": "apps/worker"
        }
      }
    }
}