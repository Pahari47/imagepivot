{
  "name": "@imagepivot/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "npx nx run-many --target=dev --all --parallel=4",
    "dev:api": "npx nx serve api",
    "dev:user-web": "npx nx dev user-web",
    "dev:admin-web": "npx nx dev admin-web",
    "dev:worker": "npx nx serve worker",
    "build": "npx nx run-many --target=build --all",
    "build:api": "npx nx build api",
    "build:user-web": "npx nx build user-web",
    "build:admin-web": "npx nx build admin-web",
    "start": "npx nx run-many --target=start --all --parallel=4",
    "lint": "npx nx run-many --target=lint --all",
    "test": "npx nx run-many --target=test --all",
    "prisma:generate": "cd packages/database && npx prisma generate",
    "prisma:migrate": "cd packages/database && npx prisma migrate dev",
    "prisma:studio": "cd packages/database && npx prisma studio",
    "prisma:push": "cd packages/database && npx prisma db push",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "ci:lint": "npx nx run-many --target=lint --all",
    "ci:typecheck": "npx nx run-many --target=typecheck --all",
    "ci:build": "npm run prisma:generate && npm run build",
    "ci:test": "npx nx run-many --target=test --all",
    "ci:prisma": "cd packages/database && npx prisma validate && cd ../.. && npm run prisma:generate",
    "ci:all": "npm ci && npm run ci:prisma && npm run ci:lint && npm run ci:typecheck && npm run ci:build && npm run ci:test",
    "ci:docker": "docker build -f infra/docker/api.Dockerfile -t imagepivot-api:test . && docker build -f infra/docker/user-web.Dockerfile -t imagepivot-user-web:test . && docker build -f infra/docker/admin-web.Dockerfile -t imagepivot-admin-web:test . && docker build -f infra/docker/worker.Dockerfile -t imagepivot-worker:test .",
    "pre-commit": "powershell -ExecutionPolicy Bypass -File scripts/pre-commit-check.ps1"
  },
  "private": true,
  "engines": {
    "node": ">=22 <23"
  },
  "devDependencies": {
    "@nx/esbuild": "22.4.1",
    "@nx/js": "22.4.1",
    "@nx/next": "^22.4.1",
    "@nx/node": "^22.4.1",
    "@nx/react": "^22.4.1",
    "@nx/workspace": "22.4.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "^1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20.19.9",
    "@types/passport-facebook": "^3.0.4",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "10.4.13",
    "esbuild": "^0.19.2",
    "eslint": "^9.39.2",
    "nx": "22.4.1",
    "postcss": "8.4.38",
    "prettier": "~3.6.2",
    "prisma": "^6.19.2",
    "tailwindcss": "3.4.3",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@prisma/client": "^6.19.2",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "next": "~16.0.1",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.7.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^4.3.6"
  },
  "overrides": {
    "chokidar": "^4.0.3",
    "readdirp": "^4.1.2"
  }
}
