  "license": "MIT",
  "scripts": {
    "dev": "nx run-many --target=dev --all --parallel=4",
    "dev:api": "nx serve api",
    "dev:user-web": "nx dev user-web",
    "dev:admin-web": "nx dev admin-web",
    "dev:worker": "nx serve worker",
    "build": "nx run-many --target=build --all",
    "build:api": "nx build api",
    "build:user-web": "nx build user-web",
    "build:admin-web": "nx build admin-web",
    "start": "nx run-many --target=start --all --parallel=4",
    "lint": "nx run-many --target=lint --all",
    "test": "nx run-many --target=test --all",
    "prisma:generate": "cd packages/database && npx prisma generate",
    "prisma:migrate": "cd packages/database && npx prisma migrate dev",
    "prisma:studio": "cd packages/database && npx prisma studio",
    "prisma:push": "cd packages/database && npx prisma db push",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "private": true,
  "engines": {
    "node": ">=22 <23"
  },
  "devDependencies": {
    "@nx/esbuild": "22.4.1",
    "@nx/js": "22.4.1",
    "@nx/next": "^22.4.1",
    "@nx/node": "^22.4.1",
    "@nx/react": "^22.4.1",
    "@nx/workspace": "22.4.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "^1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "20.19.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "10.4.13",
    "esbuild": "^0.19.2",
    "nx": "22.4.1",
    "postcss": "8.4.38",
    "prettier": "~3.6.2",
    "prisma": "^6.19.2",
    "tailwindcss": "3.4.3",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "express": "^4.21.2",
    "next": "~16.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
